# Database 설정
DB_HOST=localhost
DB_PORT=3306
DB_NAME=random_ticket
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT 설정
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_ACCESS_TOKEN_VALIDITY=3600000
JWT_REFRESH_TOKEN_VALIDITY=1209600000

# AWS S3 설정
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# 메일 설정
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# 서버 포트
SERVER_PORT=8080

# Redis 스트림 설정
REDIS_STREAM_TICKET_NAME=ticket_stream
REDIS_STREAM_TICKET_GROUP=ticket_group
REDIS_STREAM_TICKET_CONSUMER=ticket_consumer
REDIS_STREAM_DLQ_NAME=ticket_stream_dlq
REDIS_STREAM_DLQ_GROUP=dlq_group
REDIS_STREAM_DLQ_CONSUMER=dlq_consumer

# Redis 티켓 설정
REDIS_TICKET_ISSUED_SET=issued_tickets
REDIS_TICKET_COUNTER_KEY=ticket_counter
REDIS_TICKET_MAX_TICKETS=100
REDIS_TICKET_LOCK_KEY=ticket_issuance_lock
REDIS_TICKET_LOCK_WAIT_TIME=5
REDIS_TICKET_LOCK_LEASE_TIME=10

# Redis 연결 설정
REDIS_CONN_MIN_IDLE=1
REDIS_CONN_POOL_SIZE=2
REDIS_POLL_TIMEOUT=100
REDIS_MAX_RETRY=3
REDIS_DLQ_PROCESS_COUNT=10
REDIS_DLQ_BLOCK_SECONDS=5
REDIS_DLQ_SCHEDULE_DELAY=60000
